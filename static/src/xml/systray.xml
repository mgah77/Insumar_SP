<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="insumar_sp.SystrayMenu" owl="1">
        <div class="o_MessagingMenu o-dropdown dropdown">
            <button class="o-no-caret btn btn-secondary dropdown-toggle" 
                    type="button" 
                    data-toggle="dropdown" 
                    aria-label="Solicitudes de Pedido">
                <i class="fa fa-bell" role="img" aria-label="Solicitudes"/>
                <span t-if="widget.state.counter" class="o_notification_counter badge rounded-pill bg-primary" 
                      t-esc="widget.state.counter"/>
            </button>
            <div class="dropdown-menu dropdown-menu-end" role="menu">
                <a href="#" class="dropdown-item" data-type="sp_requests">
                    <span>Solicitudes Pendientes</span>
                    <span t-if="widget.state.counter" class="badge bg-primary float-end" t-esc="widget.state.counter"/>
                </a>
            </div>
        </div>
    </t>
</templates>