<!-- Insumar_SP/views/insumar_sp_views.xml -->
<odoo>
    <data>
        <record id="view_insumar_sp_tree" model="ir.ui.view">
            <field name="name">insumar_sp.tree</field>
            <field name="model">insumar_sp.request</field>
            <field name="arch" type="xml">
                <tree string="Solicitudes de Pedido" decoration-info="state=='draft'" decoration-warning="state=='review'" decoration-success="state=='done'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="warehouse_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_insumar_sp_form" model="ir.ui.view">
            <field name="name">insumar_sp.form</field>
            <field name="model">insumar_sp.request</field>
            <field name="arch" type="xml">
                <form string="Solicitud de Pedido">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,review,validated,done"/>
                        <button name="action_send_review" string="Enviar a Revisión" type="object" class="btn-primary"
                                attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('is_branch_user', '=', False)]}"/>
                        <button name="action_validate" string="Validar" type="object" class="btn-primary"
                                attrs="{'invisible': ['|', ('state', '!=', 'review'), ('is_branch_user', '=', True)]}"/>
                        <button name="action_recalculate_stock" string="Actualizar Stock" type="object" class="btn-secondary"
                                attrs="{'invisible': [('state', '!=', 'validated')]}"/>
                        <button name="action_mark_done" string="Crear transferencia" type="object" class="btn-primary"
                                attrs="{'invisible': ['|', ('state', '!=', 'validated'), ('is_branch_user', '=', True)]}"/>
                    </header>
                    <sheet>
                        <field name="is_branch_user" invisible="1"/>
                        
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="user_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="warehouse_id" attrs="{'readonly': ['|', ('is_branch_user', '=', True), ('state', '!=', 'draft')]}" options="{'no_open': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Productos Solicitados">
                                <field name="line_ids">
                                    <tree string="Líneas de Producto" editable="bottom" decoration-danger="show_red_alert">
                                        <field name="product_id" attrs="{'readonly': [('parent.state', '!=', 'draft')]}" domain="[('sale_ok', '=', True), ('detailed_type', '=', 'product')]" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        <field name="qty_request" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                        <field name="stock_branch" readonly="1"/>
                                        <field name="stock_central" readonly="1" 
                                               attrs="{'invisible': [('can_see_stock_central', '=', False)]}"/>
                                        <field name="avg_sales_3m" readonly="1"
                                               attrs="{'invisible': [('can_see_stock_central', '=', False)]}"/>
                                        <field name="move_qty" 
                                               attrs="{'readonly': ['|', ('parent.state', 'not in', ['review', 'validated']), ('parent.is_branch_user', '=', True)]}"/>
                                        <field name="show_red_alert" invisible="1"/>
                                        <field name="can_see_stock_central" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_insumar_sp_transfer_wizard_form" model="ir.ui.view">
            <field name="name">insumar_sp.transfer.wizard.form</field>
            <field name="model">insumar_sp.transfer.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirmar Transferencia">
                    <field name="request_id" invisible="1"/>
                    <div class="alert alert-warning" role="alert" style="margin-bottom: 16px;">
                        <strong>¡Atención!</strong> Las siguientes líneas tienen una cantidad a mover menor a la solicitada. Revise la tabla y confirme si desea continuar.
                    </div>
                    <field name="line_ids">
                        <!-- SE AÑADE no_open="1" A LA ETIQUETA <tree> -->
                        <tree string="Resumen de Productos" decoration-danger="has_difference" create="0" edit="0" no_open="1">
                            <field name="product_id" readonly="1"/>
                            <field name="qty_request" string="Solicitado" readonly="1"/>
                            <field name="move_qty" string="A Mover" readonly="1"/>
                            <field name="has_difference" invisible="1" readonly="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="action_confirm_transfer" string="Confirmar y Crear" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_insumar_sp_search" model="ir.ui.view">
            <field name="name">insumar_sp.search</field>
            <field name="model">insumar_sp.request</field>
            <field name="arch" type="xml">
                <search string="Buscar Solicitud de Pedido">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="warehouse_id"/>
                    <field name="state"/>
                    <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="En Revisión" name="review" domain="[('state', '=', 'review')]"/>
                    <filter string="Validado" name="validated" domain="[('state', '=', 'validated')]"/>
                    <filter string="Entregado" name="done" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter string="Mis SPs" name="my_sp" domain="[('user_id', '=', uid)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Bodega" name="group_warehouse" context="{'group_by':'warehouse_id'}"/>
                        <filter string="Estado" name="group_state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_insumar_sp" model="ir.actions.act_window">
            <field name="name">Solicitudes de Pedido</field>
            <field name="res_model">insumar_sp.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primera Solicitud de Pedido
                </p>
            </field>
        </record>

        <menuitem id="menu_insumar_sp_root" name="Solicitudes de Pedido" parent="stock.menu_stock_root" sequence="10"/>
        <menuitem id="menu_insumar_sp" name="Solicitudes" parent="menu_insumar_sp_root" action="action_insumar_sp" sequence="1"/>

    </data>
</odoo>